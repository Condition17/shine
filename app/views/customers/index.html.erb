<header class = "container">
<h1> Customer Search </h1>
	<section class = "search-form">
		<%= form_for :customers, method: :get do |f| %>
			
			<div class="input-group input-group-lg">
				<%= text_field_tag :keywords, nil, placeholder: "First Name, Last Name, or Email Adress",class: "form-control input-lg"%>
				<span class = "input-group-btn">
					<%= submit_tag "Find Costumers", class: "btn btn-primary btn-lg" %>
				</span>
			</div>
		
		<% end %>
	</section>

	<section class = "search-resoults">
		
		<table class="table table-striped">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
					<th>Joined</th>
				</tr>
			</thead>

			<tbody>
				<%@customers.each do |customer| %>
					<tr>
						<td><%= customer.first_name %></td>
						<td><%= customer.last_name %></td>
						<td><%= customer.email %></td>
						<td><%= customer.created_at.to_date %></td>
					</tr>
				<%end%>
			</tbody>

		</table>
	</section>

</header>